<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dominando.android.globoplay">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GloboPlay">
        <activity
            android:name="dominando.android.globoplay.ui.feature.moviedetail.activity.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:theme="@style/Theme.GloboPlay.NoActionBar"></activity>
        <activity android:name="dominando.android.globoplay.ui.feature.home.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>